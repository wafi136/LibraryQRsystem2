<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfirmDetail">

    <TextView
        android:id="@+id/textView_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Disini aku be Username"
        android:textSize="30sp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"

        />

    <TextView
        android:id="@+id/textView_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Disini aku be Password"
        android:textSize="30sp"
        android:layout_below="@+id/textView_username"
        android:layout_alignParentStart="true"
        />

    <Button
        android:id="@+id/btnGo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textView_password"
        android:text="Open Dialog" />

    <TextView
        android:id="@+id/txtBoxInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btnGo"
        android:textAlignment="center"
        android:text="Student Name"
        android:inputType="textMultiLine"
        android:longClickable="false"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        />
    <TextView
        android:id="@+id/txtBoxBook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/txtBoxInfo"
        android:textAlignment="center"
        android:text="Book Detail"
        android:inputType="textMultiLine"
        android:longClickable="false"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        />
    <Button
        android:id="@+id/btnSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/txtBoxBook"
        android:text="Confirm Borrow" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="306dp"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="52dp"
        android:layout_marginTop="150dp"
        android:text="New Dialog with send k Firebase"
        android:textAlignment="center"
        android:textStyle="bold" />

</RelativeLayout>